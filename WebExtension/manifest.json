{
  "name": "Jira integration tool",
  "version": "1.0",
  "description": "Jira integration tool",
  "manifest_version": 2,
  "permissions": [
    "nativeMessaging",
    "notifications"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://jira.<<YOUR DOMAIN>>.com/browse/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "scripts/page.js"
  ],
  "applications": {
    "gecko": {
      "id": "{f6309bf7-aaab-43a3-8f67-dd4b32224cfa}",
      "strict_min_version": "50.0"
    }
  }
}
